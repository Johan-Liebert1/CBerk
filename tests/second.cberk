fun is_palindrome(length: int, string: *char) -> int {
    def i: int = 0;

    loop from 0 to ((length / 2) + 1) {
        def sub: int = length - i - 1;

        def eq: int = *(string + i) == *(string + sub);

        if eq != 1 {
            return 0
        }

        i = i + 1
    }

    return 1
}

fun main() {
    def rush: str = "rush";
    def racecar: str = "racecar";

    def ret: int = is_palindrome(4, rush as *char);

    write("ret = ", ret)

    ret = is_palindrome(7, racecar as *char);
    write("ret = ", ret)
}

main()
